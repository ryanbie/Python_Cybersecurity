# Run for loop with Range
for i in range(10):
  print("Cannot Connect")

# For Loops

for i in ["elarson", "bmoreno", "tshah", "sgilmore"]:
		print(i)

# Looping through a list
computer_assets = ["laptop1", "desktop20", "smartphone03"]
for asset in computer_assets:
		print(asset)

# Looping through a string
string = "security"
for text in string:
		print(text)

# Using range()
for i in range(0, 5):
		print(i)

# or 

for i in range(5)
		print(i)

# While loops (good for a loop based on conditions, will continue as long as the condition is true) 
i = 1
while i < 5:
		print(i)
		i = i + 1

login_attempts = 0
while login_attempts < 5:
		print("Login attempts:", login_attempts)
		login_attempts = login_attempts + 1

count = 0
login_status = True
while login_status == True:
		print("Try again."
		count = count + 1
		if count == 4:
			login_status = False

# Break loop
computer_assets = ["laptop1", "desktop20", "smartphone03"]
for asset in computer_assets:
		if asset == "desktop20":
			break
		print(asset)

# Continue loop
computer_assets = ["laptop1", "desktop20", "smartphone03"]
for asset in computer_assets:
		if asset == "desktop20":
			continue
		print(asset)